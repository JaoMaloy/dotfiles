#
# wm independent hotkeys
#

# terminal emulator
super + Return
    st

# development environment
super + shift + Return
    st -n development -e /usr/local/bin/autotmux

# file explorer
super + e
    st -n explorer -e nnn -d -r

# browser
super + w
    qutebrowser

# firefox
super + shift + w
    firefox-developer-edition

super + shift + m
    st -n music -e ncmpcpp

super + shift + n
    st -n news -e newsboat

super + shift + c
    st -n chat -e weechat

super + shift + t
    st -n task -e taskwarrior-tui

# rofi program launcher
super + space
    rofi -show drun -no-show-match -show-icons -display-drun ""

# rofi scripts {passwordmanager, qalc, bluezutils, network, xrandr}
super + {b, equal, F2, F3, F5}
    {bitwardenmenu, calculatormenu, bluetoothmenu, networkmenu, xrandrmenu}

# show date and time as a notification
super + d
    notify-date

# make sxhkd reload its configuration files:
super + ctrl + r
    pkill -USR1 -x sxhkd; notify-send "Sxhkd refreshed!"

# Power menu
super + Escape
    powermenu

#
#  media controls
#

super + {shift + comma, shift + period, shift + slash, slash}
    mpc {prev, next, stop, toggle}

# change volume percentage
XF86AudioRaiseVolume
    volume-control up

XF86AudioLowerVolume
    volume-control down

# toggle mute
XF86AudioMute
    volume-control mute

XF86MonBrightnessUp
    brightness-control up

XF86MonBrightnessDown
    brightness-control down

# toggle microphone
super + ctrl + alt + shift + m
    pactl set-source-mute 1 toggle; notify-send "Microphone Toggled"

# screenshots
super + shift + s
    sleep 1 && scrot --select -e 'mv $f ~/Pictures/screenshots/'

Print
    scrot -e 'mv $f ~/Pictures/screenshots/'

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {x,r}
    bspc {quit,wm -r}

# close and kill
super + shift + {_,ctrl + }q
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
    bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
    bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,ctrl + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {ctrl + p,ctrl + b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {n, p}
    bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

